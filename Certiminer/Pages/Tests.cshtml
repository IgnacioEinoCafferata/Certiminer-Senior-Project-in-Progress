@page
@model Certiminer.Pages.TestsModel
@{
    ViewData["Title"] = "Take Test";
}

<style>
    .test-thumb {
        width: 100px;
        height: 100px; 
        object-fit: cover;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0,0,0,.18);
    }
    /* optional: give rows a bit more breathing room */
    .table tbody tr td {
        padding-top: .9rem;
        padding-bottom: .9rem;
    }
</style>

<section class="page-wrap">
    <div class="container">
        <div class="glass-panel">

            @if (Model.Current is null)
            {
                <h2>Select Chapter</h2>

                @if (Model.Chapters.Count == 0)
                {
                    <p class="text-muted">No chapters yet. Create folders (Kind = Chapters) and assign tests to them.</p>
                }
                else
                {
                    <ul class="list-group">
                        @foreach (var f in Model.Chapters)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>@f.Name</span>
                                <a class="btn btn-outline-primary btn-sm"
                                   asp-page="/Tests" asp-route-folderId="@f.Id">Open</a>
                            </li>
                        }
                    </ul>
                }
            }
            else
            {
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2>@Model.Current.Name</h2>
                    <a class="btn btn-secondary btn-sm" asp-page="/Tests">Back</a>
                </div>

                @if (Model.Tests.Count == 0)
                {
                    <p class="text-muted">No tests in this chapter.</p>
                }
                else
                {
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>Test</th>
                                <th class="text-end">Start</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var t in Model.Tests)
                            {
                                var img = string.IsNullOrWhiteSpace(t.ImageUrl)
                                ? Url.Content("~/img/test-default.svg")
                                : t.ImageUrl;

                                <tr>
                                    <td class="d-flex align-items-center">
                                        <img src="@img" alt="" class="test-thumb me-3" />
                                        <span>@t.Title</span>
                                    </td>
                                    <td class="text-end">
                                        <a class="btn btn-yellow btn-sm"
                                           asp-page="/TakeTest" asp-route-testId="@t.Id">Start</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            }

        </div>
    </div>
</section>
