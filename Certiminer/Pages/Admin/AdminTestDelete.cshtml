@page "/Admin/AdminTestDelete"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "AdminOnly")]
@model Certiminer.Pages.Admin.AdminTestDeleteModel
@{
    ViewData["Title"] = "Delete Test";
}
<section class="page-wrap">
    <div class="container">
        <div class="glass-panel">
            <h2 class="mb-3">Delete Test — @Model.TestTitle</h2>
            <p>Are you sure you want to permanently delete this test?</p>
            <ul>
                <li>Questions to delete: <strong>@Model.QuestionCount</strong></li>
                <li>Linked videos will be detached (remain without test): <strong>@Model.LinkedVideos</strong></li>
            </ul>

            <form method="post" class="d-inline">
                <button class="btn btn-danger">Delete</button>
            </form>
            <a class="btn btn-secondary" asp-page="/Admin/AdminTests">Cancel</a>
        </div>
    </div>
</section>
