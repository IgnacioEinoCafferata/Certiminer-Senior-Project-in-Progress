@page
@model Certiminer.Pages.Admin.AdminTestEditModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "AdminOnly")]

<section class="page-wrap">
    <div class="container">
        <div class="glass-panel">
            <h2>@(Model.Input.Id > 0 ? "Edit Test" : "Add Test")</h2>

            <form method="post">
                <!-- MUY IMPORTANTE: para que no cree uno nuevo -->
                <input type="hidden" asp-for="Input.Id" />
                <input type="hidden" name="returnUrl" value="@(Model.ReturnUrl ?? string.Empty)" />

                <div class="mb-3">
                    <label asp-for="Input.Title" class="form-label"></label>
                    <input asp-for="Input.Title" class="form-control" />
                    <span class="text-danger" asp-validation-for="Input.Title"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Chapter</label>
                    <div class="d-flex gap-2">
                        <select asp-for="Input.FolderId" class="form-select">
                            <option value="">-- (none) --</option>
                            @foreach (var f in Model.Chapters)
                            {
                                <option value="@f.Id">@f.Name</option>
                            }
                        </select>

                        <a href="@Url.Page("/Admin/AdminChapters")"
                           class="btn btn-outline-secondary">Manage chapters</a>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Image URL (optional)</label>
                    <input asp-for="Input.ImageUrl" class="form-control"
                           placeholder="/img/tests/sample.jpg or https://…" />
                    <span class="text-muted small">Shown in the tests list. Leave empty to use the default icon.</span>
                    <span asp-validation-for="Input.ImageUrl" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="Input.IsActive" />
                    <label class="form-check-label">Active</label>
                </div>

                <button class="btn btn-yellow">Save</button>
                <a asp-page="/Admin/AdminTests" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
