@page
@model Certiminer.Pages.Admin.AdminQuestionsModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "AdminOnly")]

<section class="page-wrap">
    <div class="container">
        <div class="glass-panel">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>Manage Questions — @Model.Test.Title</h2>

                <div class="d-flex gap-2">
                    <!-- Botón para cambiar la imagen del test -->
                    <a class="btn btn-outline-secondary"
                       asp-page="/Admin/AdminTestEdit"
                       asp-route-id="@Model.Test.Id"
                       asp-route-returnUrl="@Url.Page("/Admin/AdminQuestions", new { testId = Model.Test.Id })">
                        Edit Test
                    </a>

                    <!-- Botón para agregar pregunta -->
                    <a class="btn btn-yellow"
                       asp-page="/Admin/AdminQuestionEdit"
                       asp-route-testId="@Model.Test.Id">
                        + Add Question
                    </a>
                </div>
            </div>

            @if (Model.Items.Count == 0)
            {
                <p class="text-muted">No questions yet.</p>
            }
            else
            {
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th style="width:60%">Question</th>
                            <th>Type</th>
                            <th>Active</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var q in Model.Items)
                        {
                            <tr>
                                <td>@q.Prompt</td>
                                <td>@q.Type</td>
                                <td>@(q.IsActive ? "Yes" : "No")</td>
                                <td class="text-end">
                                    <a class="btn btn-outline-primary btn-sm me-1"
                                       asp-page="/Admin/AdminQuestionEdit"
                                       asp-route-testId="@Model.Test.Id"
                                       asp-route-id="@q.Id">Edit</a>

                                    <form method="post" asp-page-handler="Delete"
                                          asp-route-id="@q.Id"
                                          asp-route-testId="@Model.Test.Id"
                                          class="d-inline"
                                          onsubmit="return confirm('Delete this question?');">
                                        <button class="btn btn-outline-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</section>
