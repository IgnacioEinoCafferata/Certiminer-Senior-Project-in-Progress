@page "/Admin/AdminQuestions"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "AdminOnly")]
@model Certiminer.Pages.Admin.AdminQuestionsModel
@{
    ViewData["Title"] = $"Questions — {Model.TestTitle}";
}

<section class="page-wrap">
    <div class="container">
        <div class="glass-panel">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="m-0">Manage Questions — @Model.TestTitle</h2>

                <a class="btn btn-yellow btn-pill-lg"
                   asp-page="/Admin/AdminQuestionEdit"
                   asp-route-testId="@Model.TestId">+ Add Question</a>
            </div>

            @if (!Model.Items.Any())
            {
                <div class="text-muted">No questions yet.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th style="width:60%">Question</th>
                                <th>Type</th>
                                <th>Active</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var q in Model.Items)
                            {
                                <tr>
                                    <td>@q.Prompt</td>
                                    <td>@q.Type</td>
                                    <td>@(q.IsActive ? "Yes" : "No")</td>
                                    <td class="text-end">
                                        <a class="btn btn-sm btn-yellow"
                                           asp-page="/Admin/AdminQuestionEdit"
                                           asp-route-testId="@Model.TestId"
                                           asp-route-questionId="@q.Id">Edit</a>

                                        <form method="post"
                                              asp-page-handler="Delete"
                                              asp-route-testId="@Model.TestId"
                                              asp-route-questionId="@q.Id"
                                              class="d-inline">
                                            <button class="btn btn-sm btn-outline-danger"
                                                    onclick="return confirm('Delete this question?')">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            <div class="mt-3">
                <a class="btn btn-secondary" asp-page="/Admin/AdminTests">Back to Tests</a>
            </div>
        </div>
    </div>
</section>
